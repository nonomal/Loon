http-response ^https:\/\/wrapper\.cyapi\.cn\/v1\/activity\? script-path=https://raw.githubusercontent.com/mist-whisper/JS/master/ColorfulClouds/ColorfulClouds.js, requires-body=true, timeout=60, tag=彩云天气

http-request ^https:\/\/wrapper\.cyapi\.cn\/v1\/(nafp\/origin_images|satellite)\? script-path=https://raw.githubusercontent.com/mist-whisper/JS/master/ColorfulClouds/ColorfulClouds.js, timeout=60, tag=彩云天气

