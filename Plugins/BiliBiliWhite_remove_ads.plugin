[Rewrite]
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords - reject
^https:\/\/app\.bilibili\.com\/x\/resource\/ip - reject

[Script]
http-response ^https:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\? script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bili-suit-diy.js, requires-body=true, tag=bili-skin

http-response ^https:\/\/app\.bilibili\.com\/x\/(v2\/(search\/square|account\/mine)|resource\/show\/tab\/v2) script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js, requires-body=true, tag=bili-json

http-response ^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.dynamic\.v2\.Dynamic\/DynAll$ script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili-proto.js, requires-body=true, binary-body-mode=true, tag=bili-proto

http-response ^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js, requires-body=true, tag=bili-live

http-response ^https:\/\/api\.bilibili\.com\/pgc\/page\/(bangumi|cinema\/tab\?) script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js, requires-body=true, tag=bili-bangumi

http-response ^https:\/\/api\.bilibili\.com\/(pgc\/view\/v\d\/app\/season|x\/offline\/version)\? script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bili_auto_region.js, requires-body=true, tag=bili-region

[MITM]
hostname = grpc.biliapi.net, ap*.bilibili.com
